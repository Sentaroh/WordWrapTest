<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <include layout="@layout/divider_line1"/>
                    <TextView
                        android:id="@+id/normal_view0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_string0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non Wordwrap"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    <include layout="@layout/divider_line1"/>
                    <com.sentaroh.android.wordwraptest.NonWordwrapTextView
                        android:id="@+id/non_wordwrap_view0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/normal_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/test_string1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical">

                    <com.sentaroh.android.wordwraptest.NonWordwrapTextView
                        android:id="@+id/non_wordwrap_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/normal_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/test_string2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical">

                    <com.sentaroh.android.wordwraptest.NonWordwrapTextView
                        android:id="@+id/non_wordwrap_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                    <include layout="@layout/divider_line1"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>